#include <iostream>
using namespace std;
//Para calcular o valor da passagem
int main()
{
	unsigned double km;
	cout << "Km: \n";
	cin >> km;

	if (km <= 200)
	{
		cout << "Valor da viagem: " << km * 0.50 << endl;
	}
		else if (km <= 400)
		{
			cout << "Valor da viagem: " << km * 0.40 << endl;
		}
			else if (km >= 400)
			{
				cout << "Valor da viagem: " << km * 0.30 << endl;
			}

	return 0;
}
