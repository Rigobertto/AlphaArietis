#include <iostream>
using namespace std;

int main()
{
    cout << "Digite um numero para ser dividido por 2, 5 e 10" << endl;
    int n1, r1, r2, r3, r;
    cin >> n1;
    
    r1 = (n1%2);
    r2 = (n1%5);
    r3 = (n1%10);
    
    if (r1 == 0)
    cout << "Este número é divisivel por 2 pois o resto da divisão é 0." << endl;
    if (r1 != 0)
    cout << "Este número não é divisivel por 2." << endl;
    
    if (r2 == 0)
    cout << "Este némero é divisivel por 5 pois o resto da divisão é 0." << endl;
    if (r2 != 0)
    cout << "Este número não é divisivel por 5." << endl;
    
    if (r3 == 0)
    cout << "Este némero é divisivel por 10 pois o resto da divisão é 0." << endl;
    if (r3 != 0)
    cout << "Este número não é divisivel por 10." << endl;
    
    //system("pause");
    return 0;
}
